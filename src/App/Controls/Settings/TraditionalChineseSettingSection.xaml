<local:SettingSectionControl
    x:Class="Bili.App.Controls.TraditionalChineseSettingSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="using:Richasy.FluentIcon.Uwp"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:loc="using:Bili.App.Resources.Extension"
    xmlns:local="using:Bili.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <labs:SettingsCard Description="{loc:Locale Name=FullTraditionalChineseDescription}" Header="{loc:Locale Name=FullTraditionalChineseTitle}">
        <labs:SettingsCard.HeaderIcon>
            <icons:RegularFluentIcon Symbol="TextQuote16" />
        </labs:SettingsCard.HeaderIcon>
        <ToggleSwitch IsOn="{x:Bind ViewModel.IsFullTraditionalChinese, Mode=TwoWay}" />
    </labs:SettingsCard>
</local:SettingSectionControl>
