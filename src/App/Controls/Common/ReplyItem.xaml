<UserControl
    x:Class="Richasy.Bili.App.Controls.ReplyItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Richasy.Bili.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <local:CardPanel IsEnableHoverAnimation="False" IsEnableShadow="False">
        <Grid Padding="12" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <local:UserAvatar
                x:Name="UserAvatar"
                Width="32"
                Height="32"
                VerticalAlignment="Top" />
            <Grid Grid.Column="1" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="UserNameBlock"
                        Style="{StaticResource BodyTextBlockStyle}"
                        FontWeight="Bold" />
                    <Image
                        x:Name="LevelImage"
                        Grid.Column="1"
                        Height="8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Name="PublishTimeBlock"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock
                        x:Name="ReplyContentBlock"
                        HorizontalAlignment="Stretch"
                        LineHeight="24"
                        TextWrapping="Wrap" />
                </Grid>
                <Grid Grid.Row="2" ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton x:Name="LikeButton" VerticalAlignment="Center">
                        <local:IconTextBlock
                            x:Name="LikeCountBlock"
                            FontSize="12"
                            IconFontSize="12"
                            Symbol="ThumbLike16" />
                    </ToggleButton>
                    <HyperlinkButton
                        x:Name="MoreButton"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                        <TextBlock x:Name="MoreBlock" FontSize="12" />
                    </HyperlinkButton>
                </Grid>
            </Grid>
        </Grid>
    </local:CardPanel>
</UserControl>
