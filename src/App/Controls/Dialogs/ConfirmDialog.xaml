<ContentDialog
    x:Class="Richasy.Bili.App.Controls.Dialogs.ConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="using:Richasy.Bili.Locator.Uwp"
    xmlns:local="using:Richasy.Bili.App.Controls.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{loc:LocaleLocator Name=AppTip}"
    Style="{StaticResource DefaultContentDialogStyle}"
    CloseButtonText="{loc:LocaleLocator Name=Cancel}"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
    PrimaryButtonText="{loc:LocaleLocator Name=Confirm}"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            x:Name="DisplayBlock"
            Style="{StaticResource BodyTextBlockStyle}"
            MaxWidth="300"
            LineHeight="20"
            TextWrapping="Wrap" />
    </Grid>
</ContentDialog>
