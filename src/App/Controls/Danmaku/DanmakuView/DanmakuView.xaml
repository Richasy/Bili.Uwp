<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bili.App.Controls.Danmaku">

    <Style x:Key="DefaultDanmakuViewStyle" TargetType="local:DanmakuView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DanmakuView">
                    <Grid x:Name="RootGrid" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DefaultDanmakuViewStyle}" TargetType="local:DanmakuView" />
</ResourceDictionary>
