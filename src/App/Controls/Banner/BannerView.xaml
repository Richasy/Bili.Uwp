<UserControl
    x:Class="Richasy.Bili.App.Controls.BannerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Richasy.Bili.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwp="using:Richasy.Bili.ViewModels.Uwp"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <local:HorizontalRepeaterView ItemsSource="{x:Bind ItemsSource, Mode=OneWay}">
            <local:HorizontalRepeaterView.WideItemTemplate>
                <DataTemplate x:DataType="uwp:BannerViewModel">
                    <local:BannerItem
                        Title="{x:Bind Description}"
                        IsTooltipEnabled="{x:Bind IsTooltipEnabled}"
                        Source="{x:Bind Cover}"
                        TabFocusNavigation="Local"
                        Uri="{x:Bind Uri}" />
                </DataTemplate>
            </local:HorizontalRepeaterView.WideItemTemplate>
            <local:HorizontalRepeaterView.NarrowItemTemplate>
                <DataTemplate x:DataType="uwp:BannerViewModel">
                    <local:BannerItem
                        Title="{x:Bind Description}"
                        IsTooltipEnabled="{x:Bind IsTooltipEnabled}"
                        MaxImageHeight="999"
                        Source="{x:Bind Cover}"
                        Uri="{x:Bind Uri}">
                        <local:BannerItem.CardStyle>
                            <Style TargetType="local:CardPanel">
                                <Setter Property="IsHoverAnimationEnabled" Value="False" />
                            </Style>
                        </local:BannerItem.CardStyle>
                    </local:BannerItem>
                </DataTemplate>
            </local:HorizontalRepeaterView.NarrowItemTemplate>
        </local:HorizontalRepeaterView>
    </Grid>
</UserControl>
