<UserControl
    x:Class="Richasy.Bili.App.Controls.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="using:Richasy.Bili.Locator.Uwp"
    xmlns:local="using:Richasy.Bili.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uwp="using:Richasy.Bili.ViewModels.Uwp"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutGroup">
                <VisualState x:Name="CenterState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MediumWindowThresholdWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="BottomState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Container.PreferredPlacement" Value="Bottom" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <muxc:TeachingTip
            x:Name="Container"
            VerticalAlignment="Stretch"
            IsLightDismissEnabled="True"
            PreferredPlacement="Center">
            <Grid RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid RowSpacing="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <local:UserAvatar
                            Width="40"
                            Height="40"
                            Avatar="{x:Bind ViewModel.Avatar, Mode=OneWay}"
                            UserName="{x:Bind ViewModel.Name, Mode=OneWay}" />
                        <Grid
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel HorizontalAlignment="Left" Spacing="2">
                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        HorizontalAlignment="Center"
                                        Text="{x:Bind ViewModel.FollowerCount, Mode=OneWay}" />
                                    <TextBlock
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{loc:LocaleLocator Name=FansCount}" />
                                </StackPanel>
                                <Border
                                    Grid.Column="1"
                                    Width="1"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Background="{ThemeResource ControlStrokeColorDefaultBrush}" />
                                <StackPanel
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Spacing="2">
                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        HorizontalAlignment="Center"
                                        Text="{x:Bind ViewModel.FollowCount, Mode=OneWay}" />
                                    <TextBlock
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{loc:LocaleLocator Name=FollowCount}" />
                                </StackPanel>
                                <Border
                                    Grid.Column="3"
                                    Width="1"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Background="{ThemeResource ControlStrokeColorDefaultBrush}" />
                                <StackPanel
                                    Grid.Column="4"
                                    HorizontalAlignment="Right"
                                    Spacing="2">
                                    <TextBlock
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        HorizontalAlignment="Center"
                                        Text="{x:Bind ViewModel.LikeCount, Mode=OneWay}" />
                                    <TextBlock
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{loc:LocaleLocator Name=BeLikeCount}" />
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.IsShowFollowButton, Mode=OneWay}">
                                <Button
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Content="{loc:LocaleLocator Name=Follow}"
                                    Visibility="{x:Bind ViewModel.IsFollow, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}" />
                                <Button
                                    Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Content="{loc:LocaleLocator Name=Follow}"
                                    Visibility="{x:Bind ViewModel.IsFollow, Mode=OneWay}" />
                            </Grid>
                        </Grid>
                    </Grid>
                    <StackPanel Grid.Row="1" Spacing="8">
                        <TextBlock
                            Style="{StaticResource BodyTextBlockStyle}"
                            MaxWidth="300"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            IsTextSelectionEnabled="True"
                            MaxLines="1"
                            Text="{x:Bind ViewModel.Name, Mode=OneWay}"
                            TextLineBounds="Tight"
                            TextTrimming="CharacterEllipsis" />
                        <Image
                            Height="12"
                            VerticalAlignment="Center"
                            Source="{x:Bind ViewModel.Level, Mode=OneWay, Converter={StaticResource UserLevelConverter}}" />
                    </StackPanel>
                    <TextBlock
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Grid.Row="2"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        MaxLines="3"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                    <Border
                        Grid.Row="3"
                        Padding="8,4"
                        HorizontalAlignment="Left"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="{StaticResource ControlCornerRadius}">
                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}" IsTextSelectionEnabled="True">
                            <Run Text="uid:" />
                            <Run Text="{x:Bind ViewModel.Id, Mode=OneWay}" />
                        </TextBlock>
                    </Border>
                </Grid>
                <Border
                    Grid.Row="1"
                    Height="1"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource ControlStrokeColorDefaultBrush}" />

                <Grid Grid.Row="2">
                    <local:VerticalRepeaterView
                        x:Name="VideoView"
                        Grid.Row="2"
                        Margin="0,0,0,12"
                        HeaderText="{loc:LocaleLocator Name=Videos}"
                        ItemOrientation="Horizontal"
                        ItemsSource="{x:Bind ViewModel.VideoCollection, Mode=OneWay}"
                        RequestLoadMore="OnVideoViewRequestLoadMoreAsync"
                        Visibility="{x:Bind ViewModel.IsInitializeLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
                        <local:VerticalRepeaterView.ItemTemplate>
                            <DataTemplate x:DataType="uwp:VideoViewModel">
                                <local:VideoItem
                                    IsShowDanmakuCount="True"
                                    IsShowLikeCount="True"
                                    IsShowPlayCount="True"
                                    ViewModel="{x:Bind}" />
                            </DataTemplate>
                        </local:VerticalRepeaterView.ItemTemplate>
                    </local:VerticalRepeaterView>
                    <local:OverlayLoadingPanel IsBarActive="{x:Bind ViewModel.IsDeltaLoading, Mode=OneWay}" IsRingActive="{x:Bind ViewModel.IsInitializeLoading, Mode=OneWay}" />
                    <local:ErrorPanel
                        x:Name="ErrorPanel"
                        ActionButtonClick="OnRefreshButtonClickAsync"
                        ActionContent="{loc:LocaleLocator Name=Refresh}"
                        Text="{x:Bind ViewModel.ErrorText, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsError, Mode=OneWay}" />
                    <local:ErrorPanel
                        x:Name="EmptyPanel"
                        Text="{loc:LocaleLocator Name=UserHaveNoVideos}"
                        Visibility="{x:Bind ViewModel.IsShowEmptyHolder, Mode=OneWay}" />
                </Grid>
            </Grid>
        </muxc:TeachingTip>
    </Grid>
</UserControl>
