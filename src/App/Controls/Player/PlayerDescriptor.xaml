<local:PlayerComponent
    x:Class="Richasy.Bili.App.Controls.PlayerDescriptor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Richasy.Bili.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="SinglePublisherContainer"
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            Spacing="12">
            <local:UserAvatar
                Width="32"
                Height="32"
                Avatar="{x:Bind ViewModel.Publisher.Avatar, Mode=OneWay}"
                UserName="{x:Bind ViewModel.Publisher.Name, Mode=OneWay}" />
            <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.Publisher.Name, Mode=OneWay}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="24">
            <TextBlock
                x:Name="TitleBlock"
                Style="{StaticResource TitleTextBlockStyle}"
                MaxLines="2"
                Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                TextWrapping="Wrap">
                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind ViewModel.Title, Mode=OneWay}" IsEnabled="{Binding ElementName=TitleBlock, Mode=OneWay, Path=IsTextTrimmed}" />
                </ToolTipService.ToolTip>
            </TextBlock>
            <TextBlock
                x:Name="DescriptionBlock"
                Style="{StaticResource BodyTextBlockStyle}"
                HorizontalAlignment="Left"
                Foreground="{ThemeResource TextFillColorSecondary}"
                MaxLines="12"
                Text="{x:Bind ViewModel.Description, Mode=OneWay}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap">
                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind ViewModel.Description, Mode=OneWay}" IsEnabled="{Binding ElementName=DescriptionBlock, Mode=OneWay, Path=IsTextTrimmed}" />
                </ToolTipService.ToolTip>
            </TextBlock>
        </StackPanel>
    </Grid>
</local:PlayerComponent>
