<local:AppPage
    x:Class="Bili.App.Pages.Desktop.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Bili.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="using:Richasy.FluentIcon.Uwp"
    xmlns:loc="using:Bili.Locator.Uwp"
    xmlns:local="using:Bili.App.Pages.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    SizeChanged="OnSizeChanged"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="Common">
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MediumWindowThresholdWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NarrowScrollView.Visibility" Value="Visible" />
                        <Setter Target="WideContainer.Visibility" Value="Collapsed" />
                        <Setter Target="LinkScrollViewer.VerticalScrollMode" Value="Disabled" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid
            x:Name="WideContainer"
            Margin="0,0,0,28"
            Padding="{x:Bind CoreViewModel.PageRightPadding, Mode=OneWay}"
            ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="AboutContainer" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 提交问题导引模块 -->
                <controls:CardPanel x:Name="AskQuestionContainer" IsEnableHoverAnimation="False">
                    <Grid Padding="16" RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <icons:RegularFluentIcon
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="64"
                            FontWeight="Bold"
                            Symbol="ChatBubblesQuestion24" />
                        <StackPanel Grid.Row="1" Spacing="16">
                            <TextBlock
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Text="{loc:LocaleLocator Name=IsNeedFeedback}"
                                TextAlignment="Center" />
                            <TextBlock
                                Style="{StaticResource BodyTextBlockStyle}"
                                MaxWidth="360"
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{loc:LocaleLocator Name=IsNeedFeedbackDescription}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <Button
                            x:Name="AskIssueButton"
                            Style="{StaticResource AccentButtonStyle}"
                            Grid.Row="2"
                            HorizontalAlignment="Stretch"
                            Click="OnAskIssueButtonClickAsync"
                            Content="{loc:LocaleLocator Name=AskIssue}" />
                    </Grid>
                </controls:CardPanel>

                <!-- 鸣谢/关于 -->
                <Grid Grid.Row="1" RowSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="BiliHomePage"
                            Height="40"
                            HorizontalAlignment="Stretch"
                            Click="OnBiliHomePageClickAsync">
                            <TextBlock Text="{loc:LocaleLocator Name=BiliHomePage}" TextTrimming="CharacterEllipsis" />
                        </Button>
                        <Button
                            x:Name="ProjectHomePage"
                            Grid.Column="1"
                            Height="40"
                            HorizontalAlignment="Stretch"
                            Click="OnProjectHomePageClickAsync">
                            <TextBlock Text="{loc:LocaleLocator Name=ProjectHomePage}" TextTrimming="CharacterEllipsis" />
                        </Button>
                    </Grid>
                    <controls:CardPanel
                        x:Name="RelatedProjectContainer"
                        Grid.Row="1"
                        IsEnableHoverAnimation="False">
                        <Grid Padding="16" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="12,0,0,0"
                                FontWeight="Bold"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{loc:LocaleLocator Name=RelatedProjects}"
                                TextTrimming="CharacterEllipsis" />
                            <ListView
                                x:Name="LinkView"
                                Grid.Row="1"
                                IsItemClickEnabled="True"
                                ItemClick="OnLinkViewItemClickAsync"
                                ItemsSource="{x:Bind ViewModel.LinkCollection}"
                                SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}" Text="{Binding Key}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </controls:CardPanel>
                </Grid>
            </Grid>

            <Grid x:Name="QuestionContainer" Grid.Column="1">
                <controls:QuestionPanel />
            </Grid>
        </Grid>


        <ScrollViewer
            x:Name="NarrowScrollView"
            Padding="{x:Bind CoreViewModel.PageRightPadding, Mode=OneWay}"
            HorizontalScrollMode="Disabled"
            Visibility="Collapsed">
            <Grid
                x:Name="NarrowContainer"
                Margin="0,0,0,12"
                RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:AppPage>
