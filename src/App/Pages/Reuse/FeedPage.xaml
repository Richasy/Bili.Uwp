<Page
    x:Class="Richasy.Bili.App.Pages.FeedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Richasy.Bili.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="using:Richasy.Bili.Locator.Uwp"
    xmlns:local="using:Richasy.Bili.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:trigger="using:AdaptiveTriggerLibrary.Triggers.UserInterfaceTriggers"
    xmlns:uwp="using:Richasy.Bili.ViewModels.Uwp"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="WideSeasonItemTemplate" x:DataType="uwp:SeasonViewModel">
            <controls:PgcItem ViewModel="{x:Bind}" />
        </DataTemplate>
        <DataTemplate x:Key="NarrowSeasonItemTemplate" x:DataType="uwp:SeasonViewModel">
            <controls:PgcItem ViewModel="{x:Bind}" CoverHeight="140" CoverWidth="100"
                              TitleRowHeight="28">
                <controls:PgcItem.CardStyle>
                    <Style TargetType="controls:CardPanel">
                        <Setter Property="IsEnableHoverAnimation" Value="False" />
                        <Setter Property="IsEnableShadow" Value="False" />
                    </Style>
                </controls:PgcItem.CardStyle>
            </controls:PgcItem>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer x:Name="ContentScrollViewer">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutGroup">
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <trigger:WindowWidthTrigger Condition="{StaticResource MediumWindowThresholdWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <trigger:WindowWidthTrigger Condition="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Margin" Value="{StaticResource NarrowContainerPadding}" />
                        <Setter Target="FeedView.ItemOrientation" Value="Horizontal" />
                        <Setter Target="FeedView.ItemTemplate" Value="{StaticResource NarrowSeasonItemTemplate}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid
            x:Name="RootGrid"
            Margin="{StaticResource DefaultContainerPadding}"
            Visibility="{x:Bind ViewModel.IsInitializeLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:BannerView
                x:Name="BannerView"
                Margin="0,0,0,12"
                VerticalAlignment="Top"
                ItemsSource="{x:Bind ViewModel.BannerCollection, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsShowBanner, Mode=OneWay}">
                <controls:BannerView.ViewStyle>
                    <Style TargetType="controls:HorizontalRepeaterView">
                        <Setter Property="NarrowHeight" Value="200" />
                    </Style>
                </controls:BannerView.ViewStyle>
            </controls:BannerView>

            <controls:VerticalRepeaterView
                x:Name="FeedView"
                Grid.Row="1"
                Margin="0,0,0,12"
                HeaderText="{loc:LocaleLocator Name=Recommend}"
                HeaderVisibility="Visible"
                ItemTemplate="{StaticResource WideSeasonItemTemplate}"
                ItemsSource="{x:Bind ViewModel.SeasonCollection, Mode=OneWay}"
                MinWideItemHeight="180"
                MinWideItemWidth="300"
                RequestLoadMore="OnFeedViewRequestLoadMoreAsync">
                <controls:VerticalRepeaterView.AdditionalContent>
                    <Button x:Name="IndexButton">
                        <controls:IconTextBlock Symbol="TextBulletListLTR20Filled" Text="{loc:LocaleLocator Name=Index}" />
                    </Button>
                </controls:VerticalRepeaterView.AdditionalContent>
            </controls:VerticalRepeaterView>

            <controls:OverlayLoadingPanel
                Grid.RowSpan="2"
                IsBarActive="{x:Bind ViewModel.IsDeltaLoading, Mode=OneWay}"
                IsRingActive="{x:Bind ViewModel.IsInitializeLoading, Mode=OneWay}" />

            <controls:ErrorPanel
                x:Name="ErrorPanel"
                Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ActionButtonClick="OnRefreshButtonClickAsync"
                ActionContent="{loc:LocaleLocator Name=Refresh}"
                Text="{x:Bind ViewModel.ErrorText, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.IsError, Mode=OneWay}" />
        </Grid>
    </ScrollViewer>
</Page>
