<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <AcrylicBrush
        x:Key="AppMaskAcrylicBrush"
        FallbackColor="White"
        TintColor="White"
        TintOpacity="0.1" />
    <AcrylicBrush
        x:Key="AccentMaskAcrylicBrush"
        FallbackColor="{ThemeResource SystemAccentColor}"
        TintColor="{ThemeResource SystemAccentColorLight2}"
        TintOpacity="0.8" />

    <SolidColorBrush
        x:Key="AccentBadgeBackground"
        Opacity="0.4"
        Color="{ThemeResource SystemAccentColorDark1}" />
</ResourceDictionary>
