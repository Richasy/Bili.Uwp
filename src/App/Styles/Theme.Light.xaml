<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <AcrylicBrush
        x:Key="AppMaskAcrylicBrush"
        FallbackColor="White"
        TintColor="White"
        TintOpacity="0.5" />
    <AcrylicBrush
        x:Key="AccentMaskAcrylicBrush"
        FallbackColor="{ThemeResource SystemAccentColor}"
        TintColor="{ThemeResource SystemAccentColorLight2}"
        TintOpacity="0.8" />

    <SolidColorBrush
        x:Key="AppMaskBrush"
        Opacity="0.6"
        Color="White" />

    <SolidColorBrush
        x:Key="AccentMaskBrush"
        Opacity="0.8"
        Color="{ThemeResource SystemAccentColorLight2}" />

    <SolidColorBrush
        x:Key="AccentBadgeBackground"
        Opacity="0.4"
        Color="{ThemeResource SystemAccentColorDark1}" />

    <SolidColorBrush x:Key="ToggleSwitchKnobOffForeground" Color="White" />
</ResourceDictionary>
